{
  "name": "whatsapp-desktop-translation",
  "version": "1.0.0",
  "description": "WhatsApp Desktop application with comprehensive translation support",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "prebuild": "node scripts/prepare-build.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "version": "node scripts/check-electron-version.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:setup": "node scripts/test-setup.js",
    "test:session": "node scripts/check-session.js",
    "test:reconnect": "node scripts/test-reconnect.js",
    "test:clean": "node scripts/clean-session.js",
    "test:build": "node scripts/test-build.js",
    "test:isolation": "electron scripts/test-session-isolation.js",
    "verify:isolation": "node scripts/verify-session-isolation.js",
    "migrate": "node scripts/migrate-to-multi-instance.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "whatsapp",
    "desktop",
    "translation",
    "electron",
    "multi-account"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.example.whatsappdesktop",
    "productName": "WhatsApp Desktop Translation",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "LICENSE",
      "README.md"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}